<div class='inner-page'>
  <div class='container'>
    <div class='page-mainbar login'>
      <div class='login-content'>
        <div class='tab-content'>
          <div class="tab-pane fade in active br-red" id="contact">
            <h1 class='text-center'>Contact Me!</h1>
            <%= form_tag("/contact", method: "post", class: 'form-horizontal text-center', role: 'form') do %>
              <div class='form-group'>
                <div class='col-sm-12'>
                  <%= text_field_tag(:contact_name, nil, class: 'form-control', :placeholder => 'Your Name') %>
                </div>
              </div>
              <div class='form-group'>
                <div class='col-sm-12'>
                  <%= text_field_tag(:contact_email, nil, class: 'form-control', :placeholder => 'Your Email') %>
                </div>
              </div>
              <div class='form-group'>
                <div class='col-sm-12'>
                  <%= text_area_tag(:contact_content,  nil, class: 'form-control', :placeholder => 'Message') %>
                </div>
              </div>
              <div class='form-group text-center'>
                <div class='col-sm-12'>
                <%= submit_tag("Submit", :class => 'btn btn-black') %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>